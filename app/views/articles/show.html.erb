<div class="container">
  <div class="content col-xs-12 col-md-6 offset-md-3">
    <div class="article-title">
      <h1><%= @article.title %></h1>
    </div>
    <div class="article-info">
      <h3><%= @article.published_date %> by <%= @article.user.email.split('@').first %></h3>
    </div>
    <div class="article-body">
      <p><%= @article.content %></p>
    </div>
    <div class="show-actions">
      <% if policy(@article).update? %>
        <%= link_to 'Edit', edit_article_path(@article)  %> |
      <% end %>
      <% if policy(@article).destroy? %>
        <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Delete this article?" } %>
      <% end %>
    </div>
      <%= link_to 'Home', articles_path %>
  </div>
</div>


