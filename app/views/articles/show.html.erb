<div class="container">
  <div class="content col-xs-12 col-md-6 offset-md-3">
    <div class="article-title">
      <h1><%= @article.title %></h1>
    </div>
    <div class="article-info">
      <h3><%= @article.published_date %> by <%= @article.user.email.split('@').first %></h3>
    </div>
    <div class="article-body">
      <p><%= @article.content %></p>
    </div>
  </div>
</div>


